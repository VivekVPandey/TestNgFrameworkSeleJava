<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite parallel = "tests" name="Suite"> <!-- parallel = "tests" will runn classes parallely, "methods" will run all methods -->
	
	<groups>
		<run>
			<include name="sanity"/>
		</run>
	</groups>
		<listeners><listener class-name="SeleniumJava.TestComponents.Listner"></listener></listeners>

  <test thread-count="5" name="Sanity test cases"> <!-- 5 browsers/ instances can run at a time in this test -->
    <classes>
      <class name="SeleniumJava.TestNgFramework.standaloneFrameWork"/>
    </classes>
  </test> <!-- Test -->
 
</suite> <!-- Suite -->
